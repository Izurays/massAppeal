<%- include ('./layout/boilerplate')%>


<h1 class="text-center">Edit Video file</h1>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/contact/<%= video._id %>?_method=PUT" method="POST"  class="validated-form" enctype="application/">

         <!--<form action="/contact" method="POST" novalidate class="validated-form" enctype="multipart/form-data">-->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="video[title]" required value="<%= video.title %> ">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
          
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="video[description]" value="<%= video.description %> "
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label" for="videopath">VideoUrl</label>
                <input class="form-control" type="text" id="videopath" name="video[videopath]" required>
                <div class="valid-feedback">
                    Looks good!
            </div>
           
            <div class="mb-3 mt-3">
                <button class="btn btn-success">Update Video file</button>
            </div>
        </form>
        <a href="/contact/<%= video._id %> ">Back</a>
    </div>
</div>