        <p class="card-text" id="paratext">Comment: <%= comment.body%></p>
        <form action="/contact/<%=video._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    
