<%- include ('./layout/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Video file</h1>
    
    <div class="col-md-6 offset-md-3">
        <form action="/contact" method="POST"class="validated-form" enctype="application/json">

         <!--<form action="/contact" method="POST" novalidate class="validated-form" enctype="multipart/form-data" "application/json">-->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="video[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="video[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="videopath">VideoUrl</label>
                <input class="form-control" type="text" id="videopath" name="video[videopath]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
          
            <div class="mb-3 mt-3">
                <button class="btn btn-success">Add Video file</button>
            </div>
        </form>
        <a href="/contact">All videos</a>
       
    </div>
</div>

<script>
    (function () {
    'use strict'

    bsCustomFileInput.init()

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')

    // Loop over them and prevent submission
    Array.from(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
})()
</script>